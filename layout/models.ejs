                            <option value="lv1">lv1</option>
                            <option value="lv2">lv2</option>
                            <option value="lv3">lv3</option>
                            <option value="lv4">lv4</option>
                            <option value="lv9999">lv9999</option>
                        </select>
                    </div>
                </div>
                <div class="border-bottom pb-6 mb-6">
                    <h6 class="fs-5 mb-4">Custom Access</h6>
                    <div>
                        <div class="mb-4">
                            <input class="me-2" type="checkbox" name="" id="editLecture">
                            <label for="editLecture">Lecture</label>
                        </div>
                        <div class="mb-4">
                            <input class="me-2" type="checkbox" name="" id="editCoupon">
                            <label for="editCoupon">Coupon</label>
                        </div>
                        <div class="mb-4">
                            <input class="me-2" type="checkbox" name="" id="editMessage">
                            <label for="editMessage">Message</label>
                        </div>
                        <div class="mb-4">
                            <input class="me-2" type="checkbox" name="" id="editSetting">
                            <label for="editSetting">Setting</label>
                        </div>
                        <div>
                            <input class="me-2" type="checkbox" name="" id="editTaskMenu">
                            <label for="editTaskMenu">Task Menu</label>
                        </div>
                    </div>
                </div>
                <div>
                    <h6 class="fs-5 mb-4">Deactivate Account</h6>
                    <div class="">
                        <p class="text-danger mb-4 d-flex"><span class="material-symbols-outlined me-2">
                            warning
                            </span>This cannot be undone!</p>
                    </div>
                    <button class="btn btn-outline-danger w-100 rounded-0 py-4">Deactivate This Account</button>
                </div>
            </div>
            <div class="modal-footer border-top-0">
                <button type="button" class="btn rounded-0 px-8 py-2 btn-outline-success m-0"
                    data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn rounded-0 px-8 py-2 btn-success ms-4">Update</button>
            </div>
        </div>
    </div>
</div>


