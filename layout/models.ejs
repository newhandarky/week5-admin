<!-- add new admin -->
<div class="modal fade" data-bs-backdrop="static" data-bs-keyboard="false" id="newAdmin" tabindex="-1"
    aria-labelledby="newAdminLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header border-bottom-0 p-8">
                <h5 class="modal-title fs-4" id="newAdminLabel">New Admin</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body border-bottom-0 px-8 py-0 mb-9">
                <div class="border-bottom pb-6 mb-6">
                    <h6 class="fs-5 mb-4">Account</h6>
                    <div>
                        <label class="mb-1 d-block form-label" for="addName">Name</label>
                        <input class="w-100 py-3 mb-4 form-control" id="addName" type="text">
                    </div>
                    <div>
                        <label class="mb-1 d-block form-label" for="addMail">Email</label>
                        <input class="w-100 py-3 form-control" id="addMail" type="email">
                    </div>
                </div>
                <div class="border-bottom pb-6 mb-6">
                    <h6 class="fs-5 mb-4">Verification</h6>
                    <div class="d-flex mb-4">
                        <span class="material-symbols-outlined text-danger me-2">
                            warning</span>
                        <p class="fw-bold">Unverified</p>
                    </div>
                    <button class="btn btn-outline text-success w-100 border rounded-0">Send Verification Mail</button>
                </div>
                <div class="border-bottom pb-6 mb-4">
                    <h6 class="fs-5 mb-4">Access Level</h6>
                    <div class="d-flex">
                        <select class="form-select w-100 p-4" name="level" id="setLevel" aria-label="Default select example">
                            <option value="-Choose access level-">-Choose access level-</option>
                            <option value="lv1">lv1</option>
                            <option value="lv2">lv2</option>
                            <option value="lv3">lv3</option>
                            <option value="lv4">lv4</option>
                            <option value="lv9999">lv9999</option>
                        </select>
                    </div>
                </div>
                <div class="">
                    <h6 class="fs-5 mb-4">Custom Access</h6>
                    <div>
                        <div class="mb-4">
                            <input class="me-2" type="checkbox" name="" id="setLecture">
                            <label for="setLecture">Lecture</label>
                        </div>
                        <div class="mb-4">
                            <input class="me-2" type="checkbox" name="" id="setCoupon">
                            <label for="setCoupon">Coupon</label>
                        </div>
                        <div class="mb-4">
                            <input class="me-2" type="checkbox" name="" id="setMessage">
                            <label for="setMessage">Message</label>
                        </div>
                        <div class="mb-4">
                            <input class="me-2" type="checkbox" name="" id="setSetting">
                            <label for="setSetting">Setting</label>
                        </div>
                        <div>
                            <input class="me-2" type="checkbox" name="" id="setTaskMenu">
                            <label for="setTaskMenu">Task Menu</label>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer border-top-0">
                <button type="button" class="btn rounded-0 px-8 py-2 btn-outline-success m-0"
                    data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn rounded-0 px-8 py-2 btn-success ms-4">Add</button>
            </div>
        </div>
    </div>
</div>

<!-- edit admin -->
<div class="modal fade" data-bs-backdrop="static" data-bs-keyboard="false" id="editAdmin" tabindex="-1"
    aria-labelledby="editAdminLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header border-bottom-0 p-8">
                <h5 class="modal-title fs-4" id="editAdminLabel">Edit Admin</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body border-bottom-0 px-8 py-0 mb-9">
